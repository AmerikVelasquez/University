@using UniversityRegistar.Models;
@model List<UniversityRegistar.Models.Department>;

<h1>Departments</h1>
@if (@Model.Count ==0)
{
  <h3>This school has no departments!</h3>
  <p>Please add a department or we going to go broke!</p>
  <button>@Html.ActionLink("Add a department", "Create")</button>
}
else
{
  @foreach (Department department in Model)
  {
    <li>@Html.ActionLink($"{department.Name}", "Details", new {id = department.DepartmentId})</li>
  }
<p>@Html.ActionLink("Add a department", "Create")</p> 
<p>@Html.ActionLink("Home", "Index", "Home")</p> 
}
